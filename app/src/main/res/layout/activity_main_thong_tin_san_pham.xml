<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_login"
    tools:context=".MainActivityThongTinSanPham">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="335dp"
        android:layout_height="206dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

    </ImageView>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
              android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/imageView3">

        <TextView
        android:layout_gravity="center"
            android:id="@+id/tenSanPham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên sản phẩm"
            android:textColor="#fff"

            android:textSize="30sp">

        </TextView>

    </LinearLayout>

    <LinearLayout

        android:id="@+id/layoiut5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="20sp"

        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        tools:layout_editor_absoluteX="105dp">

        <TextView
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:text="Giá sản phẩm :"
            android:textColor="#fff">

        </TextView>

        <TextView
            android:id="@+id/GiaSanPham"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Giá sản phẩm"
            android:textColor="#fff">

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/layoiut5"
        tools:layout_editor_absoluteX="105dp">

        <TextView
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:text="Số lượng :"
            android:textColor="#fff">

        </TextView>

        <TextView
            android:id="@+id/SoLuongSanPham"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Giá sản phẩm"
            android:textColor="#fff">

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/layout6"
        tools:layout_editor_absoluteX="105dp">

        <TextView
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:text="Chi tiết :"
            android:textColor="#fff">

        </TextView>

        <TextView
            android:id="@+id/ChiTietSanPham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Giá sản phẩm"
            android:textColor="#fff">

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layout7">
        <Button
            android:text="Thêm vào giỏ"
            android:layout_gravity="center"
            android:id="@+id/chuyengiohang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </Button>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>