<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityThongTinSanPham"
    android:background="@drawable/gradient_login"
    >

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

    </ImageView>

    <TextView
        android:id="@+id/testlink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3">

    </TextView>
    <LinearLayout

        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="30sp"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        tools:layout_editor_absoluteX="105dp">

        <TextView
            android:layout_width="wrap_content"
            android:textColor="#fff"
            android:layout_height="wrap_content"
            android:text="Tên sản phẩm :">

        </TextView>

        <TextView
            android:textColor="#fff"

            android:id="@+id/tenSanPham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Tên sản phẩm">

        </TextView>

    </LinearLayout>

    <LinearLayout

        android:id="@+id/layoiut5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="20sp"

        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        tools:layout_editor_absoluteX="105dp">

        <TextView
            android:textColor="#fff"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:text="Giá sản phẩm :">

        </TextView>

        <TextView
            android:textColor="#fff"

            android:id="@+id/GiaSanPham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Giá sản phẩm">

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/layoiut5"
        tools:layout_editor_absoluteX="105dp">

        <TextView
            android:textColor="#fff"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lượng :">

        </TextView>

        <TextView
            android:textColor="#fff"

            android:id="@+id/SoLuongSanPham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Giá sản phẩm">

        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/layout6"
        tools:layout_editor_absoluteX="105dp">

        <TextView
            android:textColor="#fff"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chi tiết :">

        </TextView>

        <TextView
            android:textColor="#fff"
            android:id="@+id/ChiTietSanPham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Giá sản phẩm">

        </TextView>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>